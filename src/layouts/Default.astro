---
import Layout from '~/layouts/Base.astro'
import Footer from '~/components/Footer.astro'

interface Props {
    title?: string
    desc?: string
    image?: string
    mainClass?: string
}

const props = Astro.props
---

<Layout {...props}>
    <main
        class="mx-auto my-12 max-w-$c-content-width w-full"
        class:list={[props.mainClass]}
    >
        <slot />
    </main>
    <Footer footerClass="max-w-$c-content-width mx-auto" />
</Layout>
