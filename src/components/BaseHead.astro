---
import Meta from '~/meta'

const { title, desc } = Astro.props
---

<title>{title}</title>
<meta name="description" content={desc}>
<script id="check-dark-mode" is:inline>
    !(function () {
        var e = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
        var t = localStorage.getItem("theme-scheme") || "auto"; 
        ("dark" === t || e && "light" !== t) && document.documentElement.classList.toggle("dark", !0);
    }())
</script>
<meta name="keywords" content={Meta.keywords}>
<meta name="application-name", content={Meta.appName}>
<meta name="apple-mobile-web-app-title", content={Meta.title}>
<meta name="apple-mobile-web-app-status-bar-style", content="default">
<meta name="theme-color" content="#0A0A0A">
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/icon/apple-touch-120x120.png" />
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#aaaaaa" />
<link rel="alternate" type="application/rss+xml" href={`${Meta.site}/feed.xml`} />
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="preconnect" crossorigin="anonymous" href="https://fonts.googleapis.com" />
<link rel="preconnect" crossorigin="anonymous" href="https://fonts.gstatic.com" />
<link rel="preconnect" crossorigin="anonymous" href="https://unpkg.com" />
<link rel="preconnect" crossorigin="anonymous" href="https://registry.npmmirror.com" />
<link rel="preload" href="/me.webp" as="image" />
